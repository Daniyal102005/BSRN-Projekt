# connected UDP-Socket erstellen

import socket

sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM) #Socket erstellen
sock.bind(('', 4000))  #Hört auf Port 4000 zu
sock.setsockopt(socket.SOL_SOCKET, socket.SO_BROADCAST, 1) #Broadcast aktivieren

print("Discovry-Dienst läuft auf Port 4000...")

while True:
    data, addr = sock.recvfrom(1024)  # empfängt max. 1024 Bytes
    message = data.decode("utf-8").strip()  # wandelt Bytes zu Text um, entfernt \n etc.
    print(f"[Empfangen] {message} von {addr}")
